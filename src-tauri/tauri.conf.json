{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "wxchat",
  "version": "0.1.0",
  "identifier": "com.wxchat.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "wxchat",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$RESOURCE/**/*"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "./resources/**/*"
    ]
  }
}